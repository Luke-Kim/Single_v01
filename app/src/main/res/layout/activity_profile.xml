<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".detail.ProfileActivity">

    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_toolbar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="프로필 수정 및 로그아웃"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView21"
        android:layout_below="@+id/my_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/underline_green" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="2"
        android:background="@drawable/abc_cab_background_top_mtrl_alpha">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_userImage"
            android:src="@drawable/launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="금나래 Keum, narae"
            android:id="@+id/txt_userName"
            android:layout_marginTop="19dp"
            android:layout_alignTop="@+id/image_userImage"
            android:layout_toRightOf="@+id/image_userImage"
            android:layout_toEndOf="@+id/image_userImage"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:button="@null"
            android:id="@+id/btn_logout"
            android:background="@drawable/logout_btn"
            android:layout_below="@+id/txt_userName"
            android:layout_alignLeft="@+id/txt_userName"
            android:layout_alignStart="@+id/txt_userName"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="이메일"
            android:id="@+id/textView40"
            android:layout_marginTop="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="휴대전화"
            android:id="@+id/textView41"
            android:layout_below="@+id/txt_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="singleplay@gmail.com"
            android:id="@+id/txt_email"
            android:layout_alignTop="@+id/textView40"
            android:layout_toRightOf="@+id/textView41"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/textView40" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="010-1124-1234"
            android:id="@+id/txt_phone"
            android:layout_alignTop="@+id/textView41"
            android:layout_alignLeft="@+id/txt_email"
            android:layout_alignStart="@+id/txt_email"
            android:layout_alignBaseline="@+id/textView41"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="변경"
            android:id="@+id/btn_change"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/basic_button" />
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacademy.singleplay.LocationResultActivity">

    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_toolbar"/>
        <TextView
            android:id="@+id/location_toolbar_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000"/>
    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_rc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/my_frame"
        android:background="#ffffff">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/no_search"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:src="@drawable/no_show"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="해당 지역에 공연이 없어요!"
        android:id="@+id/txt_no_search"
        android:visibility="gone"
        android:layout_below="@+id/no_search"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

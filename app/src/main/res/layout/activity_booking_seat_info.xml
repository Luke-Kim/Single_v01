<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pay.BookingSeatInfoActivity"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/my_frame"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/my_toolbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="좌석 선택"
                android:textSize="25dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/underlin"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/progress_bar_seat"
                    android:id="@+id/imageView3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/show_poster"
                    android:scaleType="fitXY"
                    android:src="@drawable/com_facebook_profile_picture_blank_square"
                    android:layout_alignTop="@+id/show_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Large Text"
                    android:id="@+id/show_name"
                    android:layout_below="@+id/imageView3"
                    android:layout_toRightOf="@+id/show_theme"
                    android:layout_toEndOf="@+id/show_theme"
                    android:layout_marginTop="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="날짜"
                    android:id="@+id/textView45"
                    android:layout_below="@+id/show_theme"
                    android:layout_alignLeft="@+id/textView46"
                    android:layout_alignStart="@+id/textView46"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="장소"
                    android:id="@+id/textView46"
                    android:layout_below="@+id/textView45"
                    android:layout_toRightOf="@+id/show_poster"
                    android:layout_toEndOf="@+id/show_poster" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="date"
                    android:id="@+id/show_day"
                    android:layout_alignTop="@+id/textView45"
                    android:layout_toRightOf="@+id/textView45"
                    android:layout_toEndOf="@+id/textView45"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="show location"
                    android:id="@+id/show_location"
                    android:layout_below="@+id/show_day"
                    android:layout_toRightOf="@+id/textView45"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="time"
                    android:id="@+id/show_time"
                    android:layout_above="@+id/show_location"
                    android:layout_toRightOf="@+id/show_day"
                    android:layout_toEndOf="@+id/show_day"
                    android:layout_marginLeft="3dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_theme"
                    android:src="@drawable/contents_category_musical"
                    android:layout_alignBottom="@+id/show_name"
                    android:layout_alignLeft="@+id/textView45"
                    android:layout_alignStart="@+id/textView45"
                    android:layout_marginRight="6dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingLeft="16dp"
                android:background="@drawable/underlin"
                android:paddingRight="16dp"
                android:paddingTop="17dp"
                android:paddingBottom="17dp">

                <!--<fragment-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:name="com.tacademy.singleplay.bookingdetail.SeatInfoFragment"-->
                <!--android:id="@+id/fragment2"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--tools:layout="@layout/fragment_seat_info" />-->


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/seat_image"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/underlin"
                layout="@layout/view_choise_seat"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <Button
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/radioGroup"
            android:layout_centerHorizontal="true"
            android:text="다음"
            android:background="@drawable/basic_button"
            android:id="@+id/btn_nextstep"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp" />
    </LinearLayout>
</RelativeLayout>
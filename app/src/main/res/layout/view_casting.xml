<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="114dp"
    android:layout_height="142dp"
    android:background="@drawable/casting_card_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_photo"
        android:scaleType="fitXY"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/casting_card_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Luke kim"
        android:id="@+id/cast_roll"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/image_photo"
        android:layout_alignLeft="@+id/cast_name"
        android:layout_alignStart="@+id/cast_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Luke kim"
        android:id="@+id/cast_name"
        android:layout_below="@+id/cast_roll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

</RelativeLayout>
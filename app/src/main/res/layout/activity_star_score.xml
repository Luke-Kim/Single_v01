<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    tools:context="com.tacademy.singleplay.detail.StarScoreActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="재미있게 보셨나요?"
        android:id="@+id/textView22"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txt_theme"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[뮤지컬]"
        android:id="@+id/txt_theme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="잭더리퍼"
        android:id="@+id/txt_show_title"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/textView22"
        android:layout_toRightOf="@+id/txt_theme"
        android:layout_toEndOf="@+id/txt_theme"
        android:layout_marginStart="15dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보내기"
        android:id="@+id/btn_send_starscore"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:background="@color/design_textinput_error_color_light"
        android:textColor="#ffffff"
        android:textSize="15dp"/>
</RelativeLayout>

    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_toolbar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PushActivity"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Push 알림"
                android:id="@+id/textView3"
                android:layout_below="@+id/appbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:paddingLeft="30dp"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/push_notice_switch"
                android:checked="false"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|center_vertical"
                android:paddingRight="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="요일"
                android:id="@+id/textView40"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_gravity="left|bottom"
                android:paddingLeft="30dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_check_day"
                android:layout_alignTop="@+id/textView40"
                android:layout_alignRight="@+id/push_notice_switch"
                android:layout_alignEnd="@+id/push_notice_switch"
                android:checked="false"
                android:text="전체선택"
                android:layout_gravity="right|bottom"
                android:paddingRight="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/view_day"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="장르"
                android:id="@+id/textView41"
                android:layout_below="@+id/textView40"
                android:layout_alignLeft="@+id/textView40"
                android:layout_alignStart="@+id/textView40"
                android:layout_marginTop="149dp"
                android:paddingLeft="30dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_total_category"
                android:checked="false"
                android:text="전체선택"
                android:layout_alignBottom="@+id/textView41"
                android:layout_alignRight="@+id/switch2"
                android:layout_alignEnd="@+id/switch2"
                android:layout_gravity="right|bottom"
                android:paddingRight="30dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="♡ 위시리스트 공연 알람"
                android:id="@+id/textView42"
                android:layout_marginTop="100dp"
                android:layout_below="@+id/textView41"
                android:layout_alignLeft="@+id/textView41"
                android:layout_alignStart="@+id/textView41"
                android:layout_gravity="left|top"
                android:paddingLeft="20dp"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                android:checked="false"
                android:layout_alignBottom="@+id/textView42"
                android:layout_alignRight="@+id/btn_check_day"
                android:layout_alignEnd="@+id/btn_check_day"
                android:layout_gravity="right|bottom"
                android:paddingRight="20dp"/>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/view_categoty"
                android:layout_gravity="center_horizontal|top"/>
        </FrameLayout>

    </LinearLayout>



</LinearLayout>
